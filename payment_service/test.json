{
  "info": {
    "name": "Payment Service API",
    "_postman_id": "payment-service-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8004/api/health", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","health"] }
      }
    },
    {
      "name": "Create Payment",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"booking_id\": \"BK123\",\n  \"user_id\": \"USER123\",\n  \"amount\": 500000\n}"
        },
        "url": { "raw": "http://localhost:8004/api/payments", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments"] }
      }
    },
    {
      "name": "Get All Payments",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8004/api/payments", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments"] }
      }
    },
    {
      "name": "Get Payments by User",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8004/api/payments/user/USER123", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","user","USER123"] }
      }
    },
    {
      "name": "Get Payment by ID",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8004/api/payments/{{payment_id}}", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","{{payment_id}}"] }
      }
    },
    {
      "name": "Update Payment",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"payment_status\": \"completed\"\n}" },
        "url": { "raw": "http://localhost:8004/api/payments/{{payment_id}}", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","{{payment_id}}"] }
      }
    },
    {
      "name": "Delete Payment",
      "request": {
        "method": "DELETE",
        "url": { "raw": "http://localhost:8004/api/payments/{{payment_id}}", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","{{payment_id}}"] }
      }
    },
    {
      "name": "Create VNPay Payment",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"booking_id\": \"BK123\",\n  \"user_id\": \"USER123\",\n  \"amount\": 500000\n}"
        },
        "url": { "raw": "http://localhost:8004/api/payments/vnpay/create", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","vnpay","create"] }
      }
    },
    {
      "name": "VNPay Return URL (simulate GET)",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8004/api/payments/vnpay/return?vnp_TxnRef=BK123&vnp_ResponseCode=00&vnp_TransactionNo=VNPAY123&vnp_SecureHash=XXXX", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","vnpay","return"] }
      }
    },
    {
      "name": "VNPay IPN URL (simulate GET)",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8004/api/payments/vnpay/ipn?vnp_TxnRef=BK123&vnp_ResponseCode=00&vnp_TransactionNo=VNPAY123&vnp_SecureHash=XXXX", "protocol": "http", "host": ["localhost"], "port": "8004", "path": ["api","payments","vnpay","ipn"] }
      }
    }
  ]
}
