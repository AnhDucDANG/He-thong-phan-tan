    {
      "name": "2. Customer Registration & Login",
      "item": [
        {
          "name": "Register Customer 1",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has user_id\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user_id');",
                  "    pm.expect(jsonData).to.have.property('verification_token');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"customer1\",\n    \"email\": \"customer1@test.com\",\n    \"password\": \"password123\",\n    \"role\": \"customer\",\n    \"full_name\": \"Customer One\",\n    \"phone\": \"+84123456789\",\n    \"address\": \"123 Test St, Hanoi\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Register Customer 2",
